        <view>{{item.name}}</view>
        <view>月销量 5</view>
        <view class="product_buy">
            <view>14yuan</view>
            <view>购买</view>
        </view>
      </view>
    </view>
   
    
    <view class="category-main">
      <block wx:for="{{categoryInfo.products}}" wx:key="index">

        <view class="category-goods-items {{index%3==1?'middle':''}}" data-id="{{item.id}}" bindtap="onProductsItemTap">
          <image src="{{item.main_img_url}}" mode="aspectFill"></image>

          <view>{{item.name}}</view>

        </view>

      </block>
