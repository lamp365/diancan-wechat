@import "../tpls/base.wxss";

.my-container{
    background-color:#EDEDED;
}
.my-header{
    background-color: #f68e35;
    color: #fff;
    align-items: center;
    padding: 30rpx;
    font-size: 28rpx;
    display: flex;
}
.open-data-avatarUrl{
    height: 100rpx;
    width: 100rpx;
    display: flex;
    overflow: hidden;
    border-radius: 50%;
}

.nickName{
  margin-left: 20rpx;
  display: flex;
}

.my_address{
    display: flex;
    flex: 1;
    flex-direction: row-reverse;
}
.show_address{
    background: #B42F2D;
    width: 170rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 28rpx;
}

.my-header image{
    height: 100rpx;
    width: 100rpx;
    border-radius:100rpx;
}
.my-header text{
    margin-left: 20rpx;
}


.section{
    border-bottom:1rpx solid #E9E9E9;
    margin-left:30rpx;
    height: 90rpx;
}
.section:last-child{
    border-bottom:none;
}
.section input{
    font-size: 28rpx;
    color:#7C7C7C;
    padding: 20rpx 30rpx 20rpx 0;
}
.section picker{
    height: 100%;
    flex: 1;
}
.section picker view{
    width: 100%;
    height: 90rpx;
    font-size: 28rpx;
    color:#7C7C7C;
    display: flex;
    align-items: center;
}
.section picker view .key{
    color: #333;
}
.section picker view .val{
    margin-left: 20rpx;
}
.section .arrow-icon{
    flex-basis: 40rpx;
    background-color: #AB956D;
    display: flex;
    align-items: center;
    justify-content: center;
}
.section .arrow-icon image{
    height: 32rpx;
    width: 32rpx;
}

.my-order{
    margin-top: 2px;
    /*border-bottom: 1rpx solid #EDEDED;*/
}

.item-title{
    padding: 25rpx 0;
    color: #999999;
    text-align: center;
    /* border-bottom: 1rpx solid #EDEDED; */
    font-size: 30rpx;
    background-color: #fff;
    font-weight: bold;
    display: flex;
    padding: 0rpx 35rpx;
    justify-content: space-between;
    align-items: center;
}
.item-title view{
    display: flex;
    height: 80rpx;
    align-items: center;
}
.item-title image{
    position: absolute;
    transform: rotate(270deg);
    height: 48rpx;
    width: 48rpx;
    right: 10rpx;
}
.item-title .active{
    color: #000000;
    border-bottom:2px solid  #B42F2D;
}
.item-main{
    margin-top: 4rpx;
    background: #fff;
}
.order-item{
    margin-bottom: 15rpx;
    color: #777777;
    background-color: #fff;
    font-size: 28rpx;
}
.order-item:last-child{
    margin-bottom:0;
}
.order-header{
    margin-left: 30rpx;
    border-bottom: 1rpx solid #EDEDED;
    padding: 25rpx 0;
}
.order-header text:last-child{
    margin-left: 10rpx;
}
.order-main{
    display: flex;
    height:150rpx;
    color: #6D6D6D;
    padding:20rpx 30rpx;
}
.order-main .item-left{
    flex-basis: 150rpx;
    height: 100%;
    background-color: #F5F6F5;
    border-radius: 4rpx;
}
.order-main .item-left image{
    height: 100%;
    width: 100%;
}
.order-main .item-middle{
    flex: 1;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.order-main .item-middle view{
    margin: 10rpx 0;
}
.order-main .item-right{
    display: flex;
    flex-basis: 120rpx;
    align-items: center;
    justify-content:flex-end;
}

.order-bottom{
    margin-left: 30rpx;
    border-top: 1rpx solid #EDEDED;
    height: 90rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #2F2F2F;
}
.order-bottom .pay{
    width: 170rpx;
    height: 60rpx;
    margin-right: 30rpx;
    background-color:#B42F2D;
    border-radius: 42rpx;
    color: #fff;
    text-align: center;
    line-height: 60rpx;
}
.order-bottom .pay:active{
    background-color:#9a211f;
}
.no-data{
    background: #fff;
}
.no_data{
    text-align: center;
   

}
.no_data image{
    width: 300rpx;
    height: 300rpx;
    margin-top: 180rpx;
}
.order_act{
    display: flex;
    align-items: center;
}
.cancle{
    width: 170rpx;
    height: 60rpx;
    margin-right: 30rpx;
    border-radius: 42rpx;
    border: 1px solid #ededed;
    text-align: center;
    line-height: 60rpx;
}
.to_bottom{
    height: 80rpx;
   margin-bottom: 20rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 30rpx;
    color: #6d6d6d;
}