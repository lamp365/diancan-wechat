@import "../tpls/category/category-tpl.wxss";

.index-top-image{
    height: 350rpx;
    width: 100%;
     

}
.mall-b-swiper {
    width: 100%;
    height: 100%;
    padding: 0rpx;
    margin: 0rpx;
}
.item-image{
    width: 100%;
    height: 100%;
    display: inline-block;
    overflow: hidden;
}
.top_nav{
    height: 48rpx;
    display: flex;
    font-size: 32rpx;
    padding: 34rpx 20rpx 24rpx 20rpx;
    background-color: #fff;
    width: 100%;
}
.top_nav .active{
    font-weight: bolder;
    border-bottom: 8rpx solid red;
}
.top_nav view{
    height: 30rpx;
    line-height: 48rpx;
    margin-right: 60rpx;
    padding-bottom: 24rpx;
}
.tuijian_box{
    padding: 20rpx;
    margin-top: 16rpx;
}
.tuijian_title{
    font-size: 30rpx;
    font-weight: bold;
    height: 50rpx;
}
.tuiujian_piclist{
    display: flex;
    width: 100%;
    height: 360rpx;
}
.onepic-item{
    white-space: nowrap;
}
.the_item{
    width: 200rpx;
    height: 260rpx;
    display: inline-block;
    margin-right: 34rpx;  
    box-sizing: border-box;
    overflow: hidden;
}
.the_item image{
    width: 100%;
    height: 200rpx;
    border-radius: 14rpx;
}
.info-item{
    font-size: 28rpx;
    white-space: nowrap;
    overflow: hidden;
}
.topnavFixed{
    /* position: fixed;
    top:0rpx;
    left: 0rpx;
    z-index: 101; */

    position: sticky;/* 这个是吸顶粘附关键属性 */
    z-index: 666;
    top:0rpx;
}
.topnavAbsolute{
    position: fixed;
    top:304rpx;
    z-index: 100;
}
.topcatFixed{ 
    /* position: fixed;
    top:105rpx;
    z-index: 100; */
    position: sticky;
    z-index: 662;
}
.mian-box{
    height: 100%;
}
.category-container{
    /*min-height: 100vh;*/
}
.category-box{
    display: flex;
    height: 100%;
}
.left-box{
    flex: 0 0 150rpx;
    border-right:1rpx solid #D8D8D8;
    width: 150rpx;
    background-color: #fff;
    height: 100%;
}
.menu-item{
    height: 50rpx;
    padding: 20rpx 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size:28rpx;
    border-left: 6rpx solid #fff;
}
.menu-item.selected{
    color: #ff0000;
    border-left-color:#ff0000;
}

.right-box{
    flex: 1;
    transition: all 500ms ease-in-out;
}
.tanslate0{
    transform:translate(0,0);
}
.tanslate1{
    transform:translate(0,-100vh);
}
.tanslate2{
    transform:translate(0,-200vh);
}
.tanslate3{
    transform:translate(0,-300vh);
}
.tanslate4{
    transform:translate(0,-400vh);
}
.tanslate5{
    transform:translate(0,-500vh);
}
.foods-type-box{
    height: 100%;
}
.shoperInfo{
    padding: 60rpx 40rpx;
}
.shoperInfo .title{
    font-size: 30rpx;
    font-weight: bolder;
    height: 60rpx;
}
.shoperInfo .address{
   display: flex;
   justify-content: space-between;
   align-items: center;
}
.shoperInfo .address>view:nth-child(1){
    display: flex;
    flex: 1;
    color: #979797;
    font-size: 28rpx;
    align-items: center;
}
.shoperInfo .address image{
    width: 60rpx;
    height: 50rpx;
    padding-right: 14rpx;
}
.shoperInfo .address .info{
    padding-right: 20rpx;
}
.shoperInfo .desc{
    font-size: 28rpx;
    color: #979797;
    padding: 10rpx 0rpx;
}
.shianjian text{
    padding: 4rpx 6rpx;
    border: 2rpx solid #979797;
    border-radius: 12rpx;
}